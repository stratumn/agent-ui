{{#if showAppendSegment}}
  {{segment-append
  	segment=model.segment
  	error=error
  	appendActions=model.appendActions
  	onClose=(action "userDidToggleShowAppendSegment")
  	onSubmit=(action "userDidAppendSegment")
  }}
{{/if}}

{{#if showMore}}
  {{segment-links segment=model.segment onClose=(action "userDidToggleShowMore")}}
{{/if}}

{{#paper-content class="md-padding"}}
  {{segment-details segment=model.segment}}
{{/paper-content}}

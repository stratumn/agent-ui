{{#if showAppendSegmentDialog}}
  {{segment-append
    segment=model.segment
    error=error
    appendActions=model.appendActions
    onClose=(action "toggleAppendSegmentDialog")
    onSubmit=(action "appendSegmentThenViewNext")
  }}
{{/if}}

{{#if showMore}}
  {{segment-links segment=model.segment onClose=(action "toggleShowMoreDialog")}}
{{/if}}

{{#paper-content class="md-padding"}}
  {{segment-details segment=model.segment}}
{{/paper-content}}

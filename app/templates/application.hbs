{{#paper-sidenav-container class="site-container inner-sidenav"}}

  {{#paper-sidenav
    class="site-sidenav"
    open=sideNavOpen
    onToggle=(action (mut sideNavOpen))
  }}
    {{#paper-content class="flex layout-column"}}

      {{#paper-toolbar class="logo"}}
        Stratumn Agent UI
      {{/paper-toolbar}}

      {{#paper-list class="flex layout-column"}}
        {{#link-to "index"}}
          {{#paper-item}}Agent info{{/paper-item}}
        {{/link-to}}
        {{#link-to "maps"}}
          {{#paper-item}}Maps{{/paper-item}}
        {{/link-to}}
        {{#link-to "segments"}}
          {{#paper-item}}Segments{{/paper-item}}
        {{/link-to}}
        <span class="flex"></span>
        <a href="http://developer.stratumn.com" target="_blank">
          {{#paper-item}}Developer HUB{{/paper-item}}
        </a>
        <a href="https://github.com/stratumn/agent-ui/issues/new" target="_blank">
          {{#paper-item}}Report issue{{/paper-item}}
        </a>
        {{#link-to "license"}}
          {{#paper-item}}<small>Â©2016 Stratumn SAS</small>{{/paper-item}}
        {{/link-to}}
      {{/paper-list}}

    {{/paper-content}}
  {{/paper-sidenav}}

  <div class="flex layout-column">
    {{#paper-toolbar class="page-main-toolbar md-whiteframe-1dp"}}
      {{#paper-toolbar-tools}}
        {{#paper-sidenav-toggle class="hide-gt-sm" as |toggleAction|}}
          {{#paper-button class="hide-gt-sm" iconButton=true onClick=(action toggleAction)}}
            {{paper-icon "menu"}}
          {{/paper-button}}
        {{/paper-sidenav-toggle}}
        {{outlet "toolbar"}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}
    {{outlet}}
  </div>

{{/paper-sidenav-container}}

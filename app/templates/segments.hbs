{{#paper-content}}
  {{segments-filter
    class="filter"
  	mapId=model.mapId
  	prevLinkHash=model.prevLinkHash
  	tags=model.tags
  	onSubmit=(action "updateFilter")
    validateLinkHash=validateOptionalLinkHash
  }}
  {{segments-list
  	segments=model.segments
  	hasNoMore=hasNoMore
    onClickSegment=(action "viewSegment")
  	onLoadMore=(action "loadMore")
  }}
{{/paper-content}}
